<%= render 'shared/error_messages', object: @restaurant %>
<%= render 'shared/error_messages', object: @review %>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: 1..5 %>
  <%= f.input :body, label: 'Description', required: true, autofocus: true %>
  <%= f.button :submit, "Review Restaurant" %>
<% end %>
